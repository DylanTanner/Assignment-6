<form action="/courses/add" method="POST">
  <div class="form-group">
    <label for="courseCode">Enter Course Code:</label>
    <input type="text" class="form-control" id="courseCode" name="courseCode" placeholder="Type course code here" required>
  </div>
  <div class="form-group">
    <label for="courseDescription">Enter Course Description:</label>
    <input type="text" class="form-control" id="courseDescription" name="courseDescription" placeholder="Type course description here" required>
  </div>
  <button type="submit" class="btn btn-primary">Add Course</button>
</form>
